---
import { getCollection } from "astro:content";
import Search from "@/components/Search.astro";
import Footer from "@/components/Footer.astro";

const languages = await getCollection("languages");

interface Props {
  title: string;
}
const length = languages.length;

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Two with one - browse the world with the variants of two stones with one bird saying"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="container mx-auto navbar bg-base-100">
      <div class="flex-1 flex gap-2">
        <a href="/" class="btn btn-ghost text-xl"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="1em"
            height="1em"
            viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M19 21H5a1 1 0 0 1-1-1v-9H1l10.327-9.388a1 1 0 0 1 1.346 0L23 11h-3v9a1 1 0 0 1-1 1M6 19h12V9.157l-6-5.454l-6 5.454z"
            ></path></svg
          ></a
        >
        <h1 class="text-xl">
          "To kill two birds with one stone" <span class="text-sm"
            >in {length} languages</span
          >
        </h1>
      </div>
      <div class="flex-none">
        <ul class="menu menu-horizontal px-1">
          <li>
            <Search />
          </li>
        </ul>
      </div>
    </header>

    <main class="container p-4 mx-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>
