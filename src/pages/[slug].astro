---
import { getCollection } from "astro:content";
import CountryBasic from "@/components/CountryBasic.astro";
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const countries = await getCollection("countries");
  return countries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
const Flag = `flag-${entry.data.flag}`;
---

<CountryBasic countryName={entry.data.countryName.en} original={entry.data.original} meaning={entry.data.meaning.en} slug={entry.slug} flag={entry.data.flag} />
